---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout
  title="Contact Us | Bridger & Associates"
  description="Contact Bridger & Associates for a free legal consultation. Located at 225 S State Street in Salt Lake City, UT. Call (801) 555-0234 or fill out our online form."
>
  <!-- Hero -->
  <section class="bg-navy-950 text-white hero-pattern">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-16 md:py-20 relative z-10">
      <p class="section-label text-gold-400 mb-4">Get in Touch</p>
      <h1 class="font-display text-4xl md:text-5xl leading-tight mb-4">Contact Us</h1>
      <p class="text-white/60 max-w-xl leading-relaxed">
        Your first consultation is always free. Tell us about your situation and we'll provide an honest assessment of your case.
      </p>
    </div>
    <div class="h-1 bg-gradient-to-r from-gold-600 via-gold-400 to-gold-600"></div>
  </section>

  <!-- Contact Section -->
  <section class="py-20 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="md:flex gap-12">

        <!-- Contact Form -->
        <div class="md:w-7/12 mb-12 md:mb-0 reveal">
          <h2 class="font-display text-2xl text-navy-950 mb-2">Request a Consultation</h2>
          <p class="text-navy-500 text-sm mb-8">All inquiries are confidential. We'll respond within one business day.</p>

          <form action="https://formspree.io/f/YOUR_FORM_ID" method="POST" class="space-y-5">
            <div class="grid sm:grid-cols-2 gap-5">
              <div>
                <label for="firstName" class="block text-sm font-semibold text-navy-800 mb-1.5">First Name</label>
                <input type="text" id="firstName" name="firstName" required class="form-input" placeholder="John" />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-semibold text-navy-800 mb-1.5">Last Name</label>
                <input type="text" id="lastName" name="lastName" required class="form-input" placeholder="Doe" />
              </div>
            </div>
            <div class="grid sm:grid-cols-2 gap-5">
              <div>
                <label for="email" class="block text-sm font-semibold text-navy-800 mb-1.5">Email</label>
                <input type="email" id="email" name="email" required class="form-input" placeholder="john@example.com" />
              </div>
              <div>
                <label for="phone" class="block text-sm font-semibold text-navy-800 mb-1.5">Phone</label>
                <input type="tel" id="phone" name="phone" class="form-input" placeholder="(801) 555-0000" />
              </div>
            </div>
            <div>
              <label for="practiceArea" class="block text-sm font-semibold text-navy-800 mb-1.5">Area of Interest</label>
              <select id="practiceArea" name="practiceArea" class="form-input">
                <option value="">Select a practice area...</option>
                <option value="personal-injury">Personal Injury</option>
                <option value="family-law">Family Law</option>
                <option value="business-litigation">Business Litigation</option>
                <option value="estate-planning">Estate Planning</option>
                <option value="criminal-defense">Criminal Defense</option>
                <option value="real-estate">Real Estate Law</option>
                <option value="other">Other / Not Sure</option>
              </select>
            </div>
            <div>
              <label for="message" class="block text-sm font-semibold text-navy-800 mb-1.5">Brief Description of Your Situation</label>
              <textarea id="message" name="message" rows="5" required class="form-input resize-none" placeholder="Please provide a brief overview of your legal matter..."></textarea>
            </div>
            <p class="text-xs text-navy-400">
              By submitting this form, you agree that we may contact you regarding your inquiry. This does not create an attorney-client relationship.
            </p>
            <button type="submit" class="btn-primary w-full sm:w-auto">
              Submit Consultation Request
            </button>
          </form>
        </div>

        <!-- Sidebar -->
        <div class="md:w-5/12 reveal">
          <!-- Contact Info -->
          <div class="bg-navy-950 rounded-lg p-8 mb-6">
            <h3 class="font-display text-xl text-white mb-6">Contact Information</h3>
            <ul class="space-y-5">
              <li class="flex items-start gap-4">
                <div class="w-10 h-10 bg-navy-800 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-gold-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/40 text-xs font-semibold uppercase tracking-wider mb-1">Phone</p>
                  <a href="tel:+18015550234" class="text-gold-400 font-semibold hover:text-gold-300 transition-colors">(801) 555-0234</a>
                </div>
              </li>
              <li class="flex items-start gap-4">
                <div class="w-10 h-10 bg-navy-800 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-gold-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/40 text-xs font-semibold uppercase tracking-wider mb-1">Email</p>
                  <a href="mailto:contact@bridgerassociates.com" class="text-white/70 hover:text-gold-400 transition-colors text-sm">contact@bridgerassociates.com</a>
                </div>
              </li>
              <li class="flex items-start gap-4">
                <div class="w-10 h-10 bg-navy-800 rounded-lg flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-5 h-5 text-gold-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
                  </svg>
                </div>
                <div>
                  <p class="text-white/40 text-xs font-semibold uppercase tracking-wider mb-1">Address</p>
                  <p class="text-white/70 text-sm">225 S State Street, Suite 1200<br/>Salt Lake City, UT 84111</p>
                </div>
              </li>
            </ul>
          </div>

          <!-- Office Hours -->
          <div class="bg-white rounded-lg p-8 border border-navy-100/50">
            <h3 class="font-display text-xl text-navy-950 mb-5">Office Hours</h3>
            <ul class="space-y-3 text-sm">
              <li class="flex justify-between"><span class="text-navy-500">Monday - Friday</span><span class="text-navy-900 font-medium">8:00 AM - 6:00 PM</span></li>
              <li class="flex justify-between"><span class="text-navy-500">Saturday</span><span class="text-navy-900 font-medium">By Appointment</span></li>
              <li class="flex justify-between"><span class="text-navy-500">Sunday</span><span class="text-navy-400">Closed</span></li>
            </ul>
            <div class="mt-5 pt-5 border-t border-navy-100/50">
              <p class="text-navy-500 text-sm">Evening and weekend consultations available by request. Free parking in the building garage.</p>
            </div>
          </div>

          <!-- Map placeholder -->
          <!-- <div class="mt-6 rounded-lg overflow-hidden border border-navy-100/50">
            Google Maps embed goes here
          </div> -->
        </div>

      </div>
    </div>
  </section>
</BaseLayout>
